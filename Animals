animal = ['lion' , 'panther', 'wolf']
for animal in animal:
	print(animal.title() + " , a panther would make a great pet")
	print(animal.title() + " , a lion would make a great pet")
	print(animal.title() + " , a wolf would make a great pet")
	print(animal.title() + " , any of these would make a great path and good for self development becuase they can teach you masculine tendacies")
